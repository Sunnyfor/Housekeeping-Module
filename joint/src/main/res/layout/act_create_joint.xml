<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_person"
                style="@style/style_font_black"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:text="协同人员" />

            <TextView
                android:id="@+id/tv_select"
                style="@style/style_font_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_person_more"
                android:layout_toEndOf="@id/tv_person"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:text="请选择" />

            <ImageView
                android:id="@+id/iv_person_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/svg_more" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_gray" />


        <EditText
            android:id="@+id/edit_content"
            style="@style/style_font_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="输入协同内容"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="@dimen/dp_10"
            android:textColor="@color/color_theme" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_gray" />


        <RelativeLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_state_hint"
                style="@style/style_font_black"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:text="状         态" />

            <TextView
                android:id="@+id/tv_state"
                style="@style/style_font_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_state_more"
                android:layout_toEndOf="@+id/tv_state_hint"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:text="请选择" />

            <ImageView
                android:id="@+id/iv_state_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/svg_more" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_gray" />

        <EditText
            android:id="@+id/edit_verify"
            style="@style/style_font_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:background="@color/transparent"
            android:gravity="top"
            android:hint="输入审核内容"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="@dimen/dp_10"
            android:textColor="@color/color_theme"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_no_data"
                style="@style/style_font_gray"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="暂无回复数据" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_commit"
            style="@style/style_common_btn"
            android:text="@string/commit"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/corners_dp5_white"
                android:maxLines="3"
                android:minHeight="@dimen/dp_36"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />

            <!--发送按钮-->

            <Button
                android:id="@+id/emotion_send"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_10"
                android:padding="@dimen/dp_1"
                android:text="发送"
                android:textColor="@color/font_white"

                android:visibility="visible" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>