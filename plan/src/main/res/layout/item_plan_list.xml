<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/corners_dp5_white"
    android:elevation="@dimen/dp_1"
    android:padding="@dimen/dp_16">


    <TextView
        android:id="@+id/tv_task_name"
        style="@style/style_font_black"
        android:layout_width="0dp"
        android:text="@string/app_name"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@id/view_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_task_time"
        style="@style/style_font_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/placeholder"
        app:layout_constraintEnd_toStartOf="@id/tv_task_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_task_name" />


    <TextView
        android:id="@+id/tv_task_status"
        style="@style/style_font_black"
        android:layout_margin="0dp"
        android:text="@string/to_be_executed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_task_time" />


    <ImageView
        android:id="@+id/view_setting"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/svg_plan_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"/>

</androidx.constraintlayout.widget.ConstraintLayout>